<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', book: f.object %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_field :body %><br>

 <%= f.submit 'Update Book' %><br>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path(@books) %>

<% end %>