<html>
<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width,initial-scale=1.0">
</head>
<h1>Books</h1>
<table> <!-- <tr>,<th>,<td>などと組み合わせて表を作成するためのタグ。 -->
 <thead>
  <tr> <!-- teble rowの略。行全体を挟む。 -->
    <th>Title</th> <!-- teble headerの略。見出しセル。 -->
    <th>Body</th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr class="list">
    <td class="title"><%= book.title %></td>
    <td class="body"><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy", book_path(book),method: :delete %></td>
  </tr>
  <% end %>
 </tbody>
</table>
<!-- 投稿 -->
 <h2>New book</h2>
 <%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages', book: f.object %>
  <h4>Title</h4>
  <!-- 一行のデキスト投稿フォーム -->
   <%= f.text_field :title %>
  <h4>Body</h4>
  <!-- 複数行のテキスト投稿フォーム -->
   <%= f.text_area :body %><br>
  <!-- 送信ボタンの生成 -->
  <%= f.submit 'Create Book' %>
 <% end %>
</html>